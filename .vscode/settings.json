{
    "black-formatter.args": [
        "--line-length",
        "120"
    ],
    "flake8.args": [
        "--max-line-length",
        "120"
    ],
    "[python]": {
        "editor.tabSize": 4,
        "editor.rulers": [
            120
        ],
        "editor.codeActionsOnSave": {
            "source.organizeImports": "never"
        }
    },
    // Files to exclude in the explorer
    "files.exclude": {
        "**/.git": false,
        "**/.svn": false,
        "**/.hg": false,
        "**/CVS": false,
        "**/.DS_Store": false,
        "**/__pycache__": false,
        "**/.venv": false,
        "**/node_modules": false,
        "**/.next": false,
        "**/.husky": false,
        "**/drizzle": false,
        "**/dist": false,
        "**/.todo.md": false,
        "**/.vscode": false,
        "**/.eslintrc.cjs": false,
        "**/.editorconfig": false,
        "**/.gitignore": false,
        "**/.lintstagedrc.mjs": false,
        "**/.markdownlint.json": false,
        "**/.markdownlintignore": false,
        "**/.prettierignore": false,
        "**/bun.lockb": false,
        "**/cspell.json": false,
        "**/package-lock.json": false,
        "**/pnpm-lock.yaml": false,
        "**/next-env.d.ts": false,
        "**/postcss.config.cjs": false,
        "**/prettier.config.js": false,
        "**/README.md": false,
        "**/next.config.js": false,
        "**/tailwind.config.ts": false,
        "**/drizzle.config.ts": false,
        "**/migrate.ts": false,
        "**/.env.example": false
    },
    "git.ignoreLimitWarning": true,
    "[markdown]": {
        "files.trimTrailingWhitespace": false
    },
}